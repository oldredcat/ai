{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-download"></i> Импорт товаров</h3>
      </div>
      <div class="panel-body">
        <form id="ai-import-form" class="form-horizontal">
          <fieldset>
            <legend>Настройки</legend>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-file">Выберите файл для импорта</label>
              <div class="col-sm-10">
                <input type="file" name="file" id="input-file" class="form-control" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-first"><span data-toggle="tooltip" data-original-title="Первая строка обычно содержит заголовки стобцов. Они нам не нужны.">Пропусить первую строку</span></label>
              <div class="col-sm-10">
                <select name="config_mail_engine" id="input-first" class="form-control">
                  <option value="1" selected="selected">Да</option>
                  <option value="0">Нет</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-count"><span data-toggle="tooltip" data-original-title="Импорт связан с выделением большого количества ресурсов сервера. Чтобы обойти ограничение хостинга импортирование происходит частями.">Количество импортируемых<br>строк за проход</span></label>
              <div class="col-sm-10">
                <input type="number" id="input-count" class="form-control" value="5">
              </div>
            </div>
            <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
              <button type="submit" class="btn btn-success">Начать импорт</button>
            </div>
          </div>
          </fieldset>
        </form>
      </div>
      <div class="panel-body">
        <fieldset>
          <legend>Импортирование</legend>
        </fieldset>
      </div>
    </div>
  </div>
</div>
{{ footer }}